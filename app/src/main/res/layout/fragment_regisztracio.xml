<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OsszesZeneFragment">


    <TextView
        android:id="@+id/regisztracio_felhasznalo_nev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/regisztracio_felhasznalo_nev_adat"
        android:layout_centerInParent="true"
        android:text="@string/felhasznalo_nev"
        android:theme="@style/SajatAdatokTextview"
        />

    <EditText
        android:id="@+id/regisztracio_felhasznalo_nev_adat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/textViewSajatAdatokAdat"
        android:textAlignment="center"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/unipass_kartya_azonosito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/unipass_kartya_szama"
        android:layout_below="@id/regisztracio_felhasznalo_nev_adat"
        android:theme="@style/SajatAdatokTextview"
        />

    <TextView
        android:id="@+id/unipass_kartya_azonosito_adat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unipass_kartya_azonosito"
        android:layout_centerInParent="true"
        android:theme="@style/textViewSajatAdatokAdat"
        android:textSize="20sp" />

    <Button
        android:id="@+id/regisztracioGomb"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="45dp"
        android:text="Regisztráció"
        android:background="@color/DEgreen"
        android:textColor="@color/DEorange"
        />

</RelativeLayout>