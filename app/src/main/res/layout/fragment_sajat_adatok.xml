<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OsszesZeneFragment"
    android:theme="@style/SajatTextview">

    <TextView
        android:id="@+id/textViewFelhasznaloNev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/felhasznalo_nev"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewFelhasznaloNevAdat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFelhasznaloNev"

        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/textViewNfcId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unipass_kartya_szama"
        android:layout_below="@+id/textViewFelhasznaloNevAdat"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textViewNfcIdAdat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNfcId"
        />

    <TextView
        android:id="@+id/textViewCsatlakozasIdeje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/csatlakozas_ideje"
        android:layout_below="@id/textViewNfcIdAdat"/>

    <TextView
        android:id="@+id/textViewCsatlakozasIdejeAdat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCsatlakozasIdeje"

        />



</RelativeLayout>